<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:elevation="@dimen/elevation"
        app:contentInsetStartWithNavigation="0dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/color_on_surface_contrast"
            app:cardCornerRadius="@dimen/corner_radius"
            app:cardElevation="0dp">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/fragment_search_search_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:imeOptions="actionDone|flagNoExtractUi"
                app:closeIcon="@drawable/ic_close"
                app:iconifiedByDefault="false"
                app:queryBackground="@null"
                app:queryHint="@string/search_hint"
                app:searchIcon="@null" />

        </com.google.android.material.card.MaterialCardView>
    </com.google.android.material.appbar.MaterialToolbar>

    <jdr.tv.ui.widget.RecyclerView
        android:id="@+id/fragment_search_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/toolbar_height"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_show_backdrop" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>